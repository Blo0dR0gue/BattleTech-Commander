{
  "name": "mechtactics-commander",
  "version": "0.1.5",
  "description": "BattleTech strategy map",
  "main": "./dist/app/core/main.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win --publish never",
    "build:mac": "electron-vite build && electron-builder --mac --publish never",
    "build:linux": "electron-vite build && electron-builder --linux --publish never",
    "publish": "npm run clear:output && npm run build && npm run postinstall && electron-builder --win --publish always",
    "test:unit": "jest",
    "test": "npm run test:unit",
    "clear:output": "rimraf ./dist/ && rimraf ./release/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Blo0dR0gue/MechTactics-Commander.git"
  },
  "author": "Daniel Czeschner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Blo0dR0gue/MechTactics-Commander/issues"
  },
  "homepage": "https://github.com/Blo0dR0gue/MechTactics-Commander#readme",
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/bootstrap": "^5.2.7",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "@vitejs/plugin-react": "^4.3.1",
    "cross-env": "^7.0.3",
    "electron": "^26.1.0",
    "electron-builder": "^24.6.4",
    "electron-vite": "^2.3.0",
    "eslint": "^8.48.0",
    "eslint-plugin-react": "^7.34.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "sass": "^1.68.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^5.3.1",
    "vite-plugin-static-copy": "^2.2.0"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.2",
    "csv": "^6.3.8",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.4",
    "sqlite": "^5.0.1",
    "sqlite3": "^5.1.6"
  }
}
