{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "./src/app/renderer/**/*",
    "./src/app/renderer/**/*.tsx",
    "./src/app/types/**/*", 
    "./src/app/preload/*.d.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "./src/app/renderer/*"
      ]
    }
  }
}
